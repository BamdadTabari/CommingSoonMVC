@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
    <div id="main-content-home" class="xs-no-positioning fixed fixed-middle">
        <div>
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="title">
                            <p class="small-title">وب سایت جدید ما در راه است.</p>
                            <span class="main-title">به زودی می آییم</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-sm-12 col-md-10 col-lg-7 col-xl-7">
                        <div class="counter-style1">
                            <input type="hidden" id="count-down-date" name="count-down-date" value="31 Dec, 2022 12:00:00" />
                            <h2 class="expired-text hidden">8 روز و 10 ساعت و 30 دقیقه و 20 ثانیه</h2>
                            <div class="countdown-timer" id="countdown-boxes">
                                <ul class="list-inline count-down-list text-center">
                                    <li id="years"><span class="years">900</span><span class="counter-time-title">سال</span></li>
                                    <li id="months"><span class="months">12</span><span class="counter-time-title">ماه</span></li>
                                    <li id="days"><span class="days">30</span><span class="counter-time-title">روز</span></li>
                                    <li id="hours"><span class="hours">24</span><span class="counter-time-title">ساعت</span></li>
                                    <li id="minutes"><span class="minutes">50</span><span class="counter-time-title">دقیقه</span></li>
                                    <li id="seconds"><span class="seconds">55</span><span class="counter-time-title">ثانیه</span></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="subscribe-form">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-6 col-xl-6 text-center">
                            <div class="subscribe-form text-center">
                                <form action="index.html#" class="form-inline mx-auto">
                                    <input type="tel" name="phone" class="form-control btn-rounded" placeholder="لطفا شماره همراه خود را وارد کنید" />
                                    <button type="submit" class="btn btn-primary btn-round">
                                        <span class="btn-text">مشترک شوید</span> <span><i class="btn-icon icofont icofont-paper-plane"></i></span>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>